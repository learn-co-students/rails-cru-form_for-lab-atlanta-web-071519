<h1><%=@genre.name%></h1>
<br><br>
<%link_to 'Edit Genre', edit_genre_path(@genre) %>
<br><br>
<%=form_tag genre_path(@genre), method:'delete' do%>
    <%=submit_tag 'Delete Genre'%>
<%end%>
<br><br>
<h3>Songs:</h3><br>
<ul>
<%@genre.songs.each do |s|%>
    <li><%=link_to s.name, song_path(s)%></li>
<%end%> 
</ul>
<br><br>
<h3>Artists:</h3><br>
<ul>
<%@genre.songs.each do |s|%>
    <li><%=link_to s.artist.name, artist_path(s.artist)%></li>
<%end%> 
</ul>
<br><br>
<%=link_to 'Genre List', genres_path%>